# .editorconfig

# Root config file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# TypeScript React files
[*.tsx]
indent_style = space
indent_size = 2

# JSON and config files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files (don't trim whitespace)
[*.md]
trim_trailing_whitespace = false
